{
  "dataset_reader": {
    "type": "dialogue_context",
    "segment_context": true,
    "shuffle_examples": true
  },
  "train_data_path": "../data/opensubtitles/discriminator/train-dev.rest",
  "validation_data_path": "../data/opensubtitles/discriminator/devel",
  "vocabulary": {
    "max_vocab_size": 20000
  },
  "model": {
    "type": "dialogue_context_coherence_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "../embeddings/glove.6B/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": true
      }
    },
    "utterance_encoder": {
      "type": "boe",
      "embedding_dim": 100,
      "averaged": true
    },
    "context_encoder": {
      "type": "boe",
      "embedding_dim": 100,
      "averaged": true
    },
    "response_encoder": {
      "type": "boe",
      "embedding_dim": 100,
      "averaged": true
    },
    "classifier_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": [100, 2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
