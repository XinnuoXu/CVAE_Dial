{
  "dataset_reader": {
    "type": "dialogue_context",
    "segment_context": true,
    "shuffle_examples": true
  },
  "train_data_path": "../data/opensubtitles/discriminator/balanced/train",
  "validation_data_path": "../data/opensubtitles/discriminator/balanced/devel",
  "vocabulary": {
    "max_vocab_size": 20000
  },
  "model": {
    "type": "dialogue_context_hierarchical_coherence_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
 //       "pretrained_file": "../embeddings/glove.6B/glove.6B.100d.txt.gz",
        "embedding_dim": 100,
        "trainable": true
      }
    },
    "utterance_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "context_encoder": {
      "type": "lstm",
      "bidirectional": false,
      "input_size": 200,
      "hidden_size": 200,
      "num_layers": 1,
      "dropout": 0.2
    },
    "response_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,
      "hidden_size": 100,
      "num_layers": 1,
      "dropout": 0.2
    },
    "classifier_feedforward": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": [200, 2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens_projection.*weight", {"type": "xavier_normal"}]
    ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 512
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
