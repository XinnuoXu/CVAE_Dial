{
  "dataset_reader": {
    "type": "dialogue_context"
  },
  "train_data_path": "../data/opensubtitles/discriminator/devel",
  "validation_data_path": "../data/opensubtitles/discriminator/devel",
  "vocabulary": {
    "max_vocab_size": 20000
  },
  "model": {
    "type": "dialogue_context_coherence_attention_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "../embeddings/glove.6B/glove.6B.300d.txt.gz",
        "projection_dim": 200,
        "embedding_dim": 300,
        "trainable": true
      }
    },
    "attend_feedforward": {
      "input_dim": 200,
      "num_layers": 2,
      "hidden_dims": 200,
      "activations": "relu",
      "dropout": 0.2
    },
    "similarity_function": {"type": "dot_product"},
    "compare_feedforward": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": 200,
      "activations": "relu",
      "dropout": 0.2
    },
    "classifier_feedforward": {
      "input_dim": 400,
      "num_layers": 2,
      "hidden_dims": [200, 2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    },
  	"initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens_projection.*weight", {"type": "xavier_normal"}]
     ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"], ["context", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 128
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad",
//      lr: 1.0
    }
  }
}
