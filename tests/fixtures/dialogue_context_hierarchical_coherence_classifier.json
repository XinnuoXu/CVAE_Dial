{
  "dataset_reader": {
    "type": "dialogue_context",
    "segment_context": true,
    "shuffle_examples": false
  },
  "train_data_path": "tests/fixtures/debug",
  "validation_data_path": "tests/fixtures/debug",
  "model": {
    "type": "dialogue_context_hierarchical_coherence_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 6,
        "trainable": false
      }
    },
    "utterance_encoder": {
      "type": "boe",
      "embedding_dim": 6,
      "averaged": true
    },
    "context_encoder": {
      "type": "boe",
      "embedding_dim": 6,
      "averaged": true
    },
    "response_encoder": {
      "type": "boe",
      "embedding_dim": 6,
      "averaged": true
    },
    "classifier_feedforward": {
      "input_dim": 12,
      "num_layers": 2,
      "hidden_dims": [4,2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens_projection.*weight", {"type": "xavier_normal"}]
    ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
