{
  "dataset_reader": {
    "type": "dialogue_context",
    "segment_context": true,
    "shuffle_examples": false
  },
  "train_data_path": "tests/fixtures/debug",
  "validation_data_path": "tests/fixtures/debug",
  "model": {
    "type": "dialogue_context_hierarchical_coherence_attention_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": false
      }
    },
    "utterance_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,    // same as text_field_embedder.embedding_dim
      "hidden_size": 50,
      "num_layers": 1,
      "dropout": 0.2
    },
    "context_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,   // 2 x utterance_encoder.hidden_size
      "hidden_size": 50,
      "num_layers": 1,
      "dropout": 0.0
    },
    "response_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 100,  // same as text_field_embedder.embedding_dim
      "hidden_size": 50,  // same as context_encoder.hidden_size
      "num_layers": 1,
      "dropout": 0.2
    },
    "attend_feedforward": {
      "input_dim": 100,   // same as text_field_embedder.embedding_dim
      "num_layers": 1,
      "hidden_dims": 20,  // free parameter
      "activations": "relu"
    },
    "similarity_function": {"type": "dot_product"},
    "compare_feedforward": {
      "input_dim": 200,   // 2 x (2 x context_encoder/response_encoder.hidden_size)
      "num_layers": 1,
      "hidden_dims": 70,  // free parameter
      "activations": "relu"
    },
    "classifier_feedforward": {
      "input_dim": 140, // 2 x compare_feedforward.hidden_dims
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": ["linear"],
      "dropout": 0.0
    },
    "initializer": [
      [".*linear_layers.*weight", {"type": "xavier_normal"}],
      [".*token_embedder_tokens_projection.*weight", {"type": "xavier_normal"}]
    ]
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 1,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
