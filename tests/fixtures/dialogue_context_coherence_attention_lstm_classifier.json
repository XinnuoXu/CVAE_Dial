{
  "dataset_reader": {
    "type": "dialogue_context"
  },
  "train_data_path": "/Users/ikonstas/data/opensubtitles/discriminator/debug",
  "validation_data_path": "/Users/ikonstas/data/opensubtitles/discriminator/debug",
  "vocabulary": {
    "max_vocab_size": 20000
  },
  "model": {
    "type": "dialogue_context_coherence_attention_classifier",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
//        "pretrained_file": "../embeddings/glove.6B/glove.6B.100d.txt.gz",
        "projection_dim": 2,
        "embedding_dim": 100,
        "trainable": true
      }
    },
//    "context_encoder": {
//      "type": "lstm",
//      "bidirectional": true,
//      "input_size": 100,
//      "hidden_size": 100,
//      "num_layers": 1,
//      "dropout": 0.2
//    },
//    "response_encoder": {
//      "type": "lstm",
//      "bidirectional": true,
//      "input_size": 100,
//      "hidden_size": 100,
//      "num_layers": 1,
//      "dropout": 0.2
//    },
    "attend_feedforward": {
      "input_dim": 2,
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": "relu"
    },
    "similarity_function": {"type": "dot_product"},
    "compare_feedforward": {
      "input_dim": 4,
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": "relu"
    },
    "classifier_feedforward": {
      "input_dim": 4,
      "num_layers": 1,
      "hidden_dims": 2,
      "activations": ["linear"],
      "dropout": 0.0
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["response", "num_tokens"], ["context", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 40,
    "patience": 10,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}
